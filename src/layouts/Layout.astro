---
interface Props {
    title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="en">
    <head>
        <meta charset="UTF-8" />
        <meta
            name="description"
            content="A creative creating creative things"
        />
        <meta name="viewport" content="width=device-width" />
        <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
        <meta name="generator" content={Astro.generator} />
        <title>{title}</title>
    </head>
    <body
        class="bg-gradient-to-r from-[#5395FF] via-[#A1C4FD] to-[#C2E9FB] selection:bg-white selection:bg-opacity-50"
    >
        <slot />
    </body>
</html>
