---
import Layout from "../layouts/Layout.astro";
import "../styles/styles.css";
---

<Layout title="Nyx Iskandar">
	<main class="main">
		<section class="container">
			<div class="fadein">
				<span>print(“Hello, World! I'm ”)</span>
				<span>console.log(“Hello, World! I'm ”)</span>
				<span>cout << "Hello, World! I'm ";</span>
				<span>Console.WriteLine("Hello, World! I'm ");</span>
				<span>System.out.println("Hello, World! I'm ");</span>
			</div>
			<h1 class="name">Nyx Iskandar</h1>
		</section>
		<section class="container">
			<a href="about" class="button-red">About</a>
			<a href="projects" class="button-blue">Projects</a>
			<a href="experience" class="button-purple">Experience</a>
		</section>
	</main>
</Layout>

<style>
	.name {
		font-size: 4rem;
		margin: 0;
		text-align: center;
		z-index: 1;
	}

	.fadein {
		display: flex;
		align-items: center;
		justify-content: center;
		text-align: center;
		width: 100%;
	}

	.fadein span {
		animation: fadeEffect 12.5s linear infinite 0s;
		color: #dcc966;
		opacity: 0;
		overflow: hidden;
		position: absolute;
		font-size: 1rem;
		margin: 0 0.5rem;
	}

	.fadein span:nth-child(2) {
		animation-delay: 2.5s;
		-ms-animation-delay: 2.5s;
		-webkit-animation-delay: 2.5s;
	}

	.fadein span:nth-child(3) {
		animation-delay: 5s;
		-ms-animation-delay: 5s;
		-webkit-animation-delay: 5s;
	}

	.fadein span:nth-child(4) {
		animation-delay: 7.5s;
		-ms-animation-delay: 7.5s;
		-webkit-animation-delay: 7.5s;
	}

	.fadein span:nth-child(5) {
		animation-delay: 10s;
		-ms-animation-delay: 10s;
		-webkit-animation-delay: 10s;
	}

	.fadein span:nth-child(6) {
		animation-delay: 12.5s;
		-ms-animation-delay: 12.5s;
		-webkit-animation-delay: 12.5s;
	}

	@keyframes fadeEffect {
		0% {
			opacity: 0;
		}
		5% {
			opacity: 0;
			transform: translateY(0px);
		}
		10% {
			opacity: 1;
			transform: translateY(0px);
		}
		25% {
			opacity: 1;
			transform: translateY(0px);
		}
		30% {
			opacity: 0;
			transform: translateY(0px);
		}
		80% {
			opacity: 0;
		}
		100% {
			opacity: 0;
		}
	}

	@media (max-width: 1150px) {
		.name {
			font-size: 2.5rem;
			margin-bottom: 2rem;
		}
	}

	@media (max-width: 500px) {
		.fadein span {
			font-size: 0.8rem;
		}
	}
</style>
