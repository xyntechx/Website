---
import Layout from "../layouts/Layout.astro";
import Link from "../components/Link.astro";

import { Image } from "astro:assets";
import nyxPP from "../assets/nyx.jpg";

const links = [
  { name: "GitHub", url: "https://github.com/xyntechx" },
  { name: "LinkedIn", url: "https://www.linkedin.com/in/nyx-iskandar/" },
  { name: "ORCID", url: "https://orcid.org/0009-0008-4361-3364" },
  {
    name: "Scholar",
    url: "https://scholar.google.com/citations?user=6CbTfzIAAAAJ&hl=en&oi=ao",
  },
];
---

<Layout>
  <main
    class="flex items-center justify-center flex-col gap-4 py-12 px-4 md:px-0 md:w-2/5 w-full h-full"
  >
    <div class="w-[100px] h-[100px]">
      <Image src={nyxPP} alt="Nyx at Times Square, NYC" class="rounded-sm" />
    </div>
    <h1 class="font-bold">
      nyx iskand<Link href="/name" target="_self">a</Link>r
    </h1>

    <p class="text-sm w-full text-justify">
      Hey, I'm Nyx! I'm building AI for root-cause analysis in production code
      as Founding Research Engineer at <Link href="https://foam.ai/">foam</Link
      >. For fun, I'm independently exploring RL-centric communication through
      vision.
    </p>

    <p class="text-sm w-full text-center">
      {
        links.map((link, i) => (
          <>
            <Link href={link.url}>{link.name}</Link>
            <span>{i < links.length - 1 ? " | " : ""}</span>
          </>
        ))
      }
    </p>

    <p class="text-xs w-full text-right mt-10">
      <Link href="/about" target="_self"
        >A loose collection of 'about' fragments {">"}</Link
      >
    </p>
  </main>
</Layout>
