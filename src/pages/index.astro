---
import Layout from "../layouts/Layout.astro";
import About from "../components/about.astro";
import Grid from "../components/grid.tsx";
import Publications from "../components/publications.astro";
import Commands from "../components/commands.astro";
---

<Layout title="Nyx Iskandar">
    <main
        class="w-full flex items-center justify-center flex-col p-10 md:p-20 md:pt-40 gap-20"
    >
        <section class="w-full grid grid-cols-1 md:grid-cols-2 gap-4">
            <div
                class="flex items-center justify-end md:justify-center flex-col gap-y-4 text-xs md:text-base"
            >
                <About />
            </div>
            <div
                class="flex items-start md:items-center justify-center text-xs md:text-base"
            >
                <Grid client:load />
            </div>
        </section>
        <section
            class="w-full flex flex-col items-start justify-center gap-x-4 gap-y-8"
        >
            <Publications />
        </section>
        <section
            class="flex flex-col items-start justify-center gap-x-4 gap-y-8"
        >
            <Commands />
        </section>
    </main>
</Layout>
