---
import Experience from "./Experience";
import type { IExperience } from "../../utils/types";
import styles from "./Experience.module.css";

const experiences: IExperience[] = [
    {
        role: "Software Engineer (Intern)",
        organisation: "WOGAA @ GovTech Singapore",
        startDate: "Apr 2023",
        endDate: "Present",
        responsibilities: [
            "Developed the frontend of WOGAA's brand new, highly sought-after Broken Link Checker feature",
            "Worked with product managers, designers, quality engineers, community managers, and fellow software engineers to deliver high-quality and impactful features",
        ],
    },
    {
        role: "Intern",
        organisation: "IMDA Singapore",
        startDate: "Jan 2023",
        endDate: "Mar 2023",
        responsibilities: [
            "Co-authored a mini-journal on sustainable computing",
            "Researched on digital transformation efforts of various countries",
            "Proposed augmentations to IMDA's Digital Leaders Programme",
        ],
    },
    {
        role: "Research Intern",
        organisation: "Advanced Remanufacturing and Technology Centre (ARTC)",
        startDate: "Nov 2021",
        endDate: "Jan 2022",
        responsibilities: [
            "Led a CNN-based computer vision project for identifying industrial parts from colour images",
            "Assisted an intelligent robotic grasping project using a collaborative robot (UR5), deep neural networks and the Robotic Operating System (ROS) framework",
        ],
    },
];
---

<section class={styles.container}>
    <h1 class={styles.title}>Work Experience</h1>
    {
        experiences.map((experience) => (
            <Experience {...{ experience }} client:load />
        ))
    }
    <a
        href="https://www.linkedin.com/in/nyx-iskandar/"
        target="_blank"
        class={styles.findmore}
    >
        findMore("in/nyx-iskandar") &rarr;
    </a>
</section>
