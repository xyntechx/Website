---
import "../styles/styles.css";

export interface Props {
    imageUrl: string;
    name: string;
    description: string;
    githubUrl: string;
}

const { imageUrl, name, description, githubUrl } = Astro.props as Props;
---

<div class="project-container">
    <img src={imageUrl} alt={"Image of " + name} class="img" />
    <div class="content">
        <a href={githubUrl} class="name" target="_blank">{name} <img src="/github.png" width="20"/></a>
        <p class="description">{description}</p>
    </div>
</div>

<style>
    .content {
        display: flex;
        justify-content: center;
        align-items: flex-start;
        flex-direction: column;
        row-gap: 1rem;
        width: 50%;
    }

    .name {
        background-color: #1a1a1a;
        border: 1px #4cb6c8 solid;
        font-size: 1.2rem;
        margin: 0;
        width: 100%;
        text-align: center;
        padding: 0.2rem 1rem;
        text-decoration: none;
        color: inherit;
        transition: 0.3s;
        display: flex;
        justify-content: center;
        align-items: center;
        column-gap: 1rem;
    }

    .name:hover {
        background-color: #4cb6c8;
    }

    .description {
        margin: 0;
        padding: 0 1rem;
        text-align: justify;
        width: 100%;
    }

    .img {
        width: 50%;
    }

    @media (max-width: 1150px) {
        .img {
            width: 90%;
        }

        .content {
            width: 90%;
        }

        .name {
            padding: 0.2rem 0;
        }

        .description {
            padding: 0;
        }
    }
</style>
